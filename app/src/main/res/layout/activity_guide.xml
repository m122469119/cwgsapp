<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.isoftstone.finance.cwgsapp.activity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:id="@+id/guide_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_marginTop="-35.0dip"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/guide_btn"
            android:layout_width="80.0dip"
            android:layout_height="40.0dip"
            android:background="@drawable/shape_graycorners"
            android:text="@string/guide_btn_ljty"
            android:textColor="@color/wordcolorone"
            android:textSize="@dimen/tvsize_titlename"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
