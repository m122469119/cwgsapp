<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/topview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/spaceline"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_account1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100.0"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ch_yhzhxx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="银行账户信息"
                android:textColor="@color/wordcolorone"
                android:textSize="@dimen/tvsize_titlename" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <LinearLayout
            android:id="@+id/ll_account2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100.0"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ch_nbzhxx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="内部账户信息"
                android:textColor="@color/wordcolorone"
                android:textSize="@dimen/tvsize_titlename" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="100.0"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行账户信息"
                android:textColor="@color/white"
                android:textSize="@dimen/tvsize_titlename" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/spaceline" />
</LinearLayout>