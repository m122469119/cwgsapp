<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/topview" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10.0dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_insidecurrency"
                style="@style/ll_Query">

                <TextView
                    style="@style/tv_titleQuery"
                    android:text="币种" />

                <TextView
                    android:id="@+id/tv_insidecurrency"
                    style="@style/tv_contentQuery" />

                <RelativeLayout style="@style/rl_dialog">

                    <ImageView
                        style="@style/img_dialog"
                        android:src="@mipmap/pointright" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_insideclientnums"
                style="@style/ll_Query">

                <TextView
                    style="@style/tv_titleQuery"
                    android:text="客户编号 由" />

                <TextView
                    android:id="@+id/tv_insideclientnums"
                    style="@style/tv_contentQuery" />

                <RelativeLayout style="@style/rl_dialog">

                    <ImageView
                        style="@style/img_dialog"
                        android:src="@mipmap/serach" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_insideclientnume"
                style="@style/ll_Query">

                <TextView
                    style="@style/tv_titleQuery"
                    android:text="客户编号 至" />

                <TextView
                    android:id="@+id/tv_insideclientnume"
                    style="@style/tv_contentQuery" />

                <RelativeLayout style="@style/rl_dialog">

                    <ImageView
                        style="@style/img_dialog"
                        android:src="@mipmap/serach" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_insideaccountnums"
                style="@style/ll_Query">

                <TextView
                    style="@style/tv_titleQuery"
                    android:text="账户编号 由" />

                <TextView
                    android:id="@+id/tv_insideaccountnums"
                    style="@style/tv_contentQuery" />

                <RelativeLayout style="@style/rl_dialog">

                    <ImageView
                        style="@style/img_dialog"
                        android:src="@mipmap/serach" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_insideaccountnume"
                style="@style/ll_Query">

                <TextView
                    style="@style/tv_titleQuery"
                    android:text="账户编号 至" />

                <TextView
                    android:id="@+id/tv_insideaccountnume"
                    style="@style/tv_contentQuery" />

                <RelativeLayout style="@style/rl_dialog">

                    <ImageView
                        style="@style/img_dialog"
                        android:src="@mipmap/serach" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_btn">

                <Button
                    android:id="@+id/btn_insideresetting"
                    style="@style/btn_resetting" />

                <Button
                    android:id="@+id/btn_insidesearch"
                    style="@style/btn_search" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>